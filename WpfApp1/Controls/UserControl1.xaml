<UserControl x:Class="WpfApp1.Controls.UserControl1"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:WpfApp1.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="450" d:DesignWidth="800">
    <StackPanel Background="#FFD4D4D4">
        <Border Margin="10">
            <TextBlock
                    Text="{Binding Person1}"/>
        </Border>
        <Border Margin="10"
                       >
            <TextBlock 
                    Text="{Binding Person2}"/>
        </Border>
        <Border Margin="10">
            <TextBlock 
                    Text="{Binding Person3}"/>
        </Border>
        <Border Margin="10">
            <TextBlock 
                    Text="{Binding Person4}"/>
        </Border>

    </StackPanel>
</UserControl>
